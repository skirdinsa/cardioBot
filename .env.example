# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram User ID (get it from @userinfobot)
TELEGRAM_USER_ID=your_telegram_user_id_here

# Google Sheets ID (from the URL)
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Timezone for reminders
TIMEZONE=Europe/Moscow

# Reminder times (24-hour format)
MORNING_REMINDER_TIME=09:00
EVENING_REMINDER_TIME=21:00

# Blood pressure norms
# Good (green): upper ≤130, lower ≤70
GOOD_UPPER=130
GOOD_LOWER=70

# Warning (yellow): upper ≤140, lower ≤90
WARNING_UPPER=140
WARNING_LOWER=90

# Bad (red): upper >140, lower >90

# Mini App settings
# URL where the webapp is accessible (required for Mini App button)
# Must be HTTPS for Telegram Mini Apps
WEBAPP_URL=https://your-domain.com

# Secret key for Flask session (generate a random string)
WEBAPP_SECRET_KEY=your_secret_key_here

# Webapp port (default: 8080)
WEBAPP_PORT=8080

# Enable debug mode for development (default: false)
WEBAPP_DEBUG=false
